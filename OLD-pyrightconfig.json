//https://github.com/microsoft/pyright/blob/main/docs/configuration.md
{
  "include": [
    "src"
  ],
  "exclude": [
    "**/node_modules",
    "**/__pycache__",
    "src/experimental",
    "src/typestubs"
  ],
  "ignore": [
    "src/oldstuff"
  ],
  "defineConstant": {
    "DEBUG": true
  },
  "stubPath": "src/stubs",
  "reportMissingImports": true,
  "reportMissingTypeStubs": false,
  "reportMissingModuleSource": true, // Added by Blaze
  "pythonVersion": "3.9",
  "pythonPlatform": "Linux",
  "executionEnvironments": [
    {
      "root": "src/web",
      "pythonVersion": "3.9",
      "pythonPlatform": "MacOS",
      "extraPaths": [
        //"src/service_libs"
      ]
    },
    {
      "root": "src/sdk",
      "pythonVersion": "3.0",
      "extraPaths": [
        "src/backend"
      ]
    },
    {
      "root": "src/tests",
      "extraPaths": [
        "src/tests/e2e",
        "src/sdk"
      ]
    },
    {
      "root": "src"
    },
    {
      "venvPath": "path_to_virtual_environments",
      "venv": "name_of_your_virtual_environment"
    }
  ]
}
